@model AgriConnectPlatformProject.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5rem;
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-size: 1rem;
            color: #333;
        }

        .form-control {
            border-radius: 5px;
            font-size: 1rem;
        }

        .btn {
            font-size: 1rem;
            border-radius: 8px;
            padding: 10px 20px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .table {
            width: 100%;
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

        .no-users-message {
            text-align: center;
            font-size: 1.2rem;
            color: #666;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Edit Role</h1>

        <form method="post" class="mt-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Id" class="form-label"></label>
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label"></label>
                        <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fas fa-angle-left"></i> Back</a>
                        <button type="submit" class="btn btn-success">Update <i class="fas fa-check-double"></i></button>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3 class="mt-3">Users with @Model.RoleName role</h3>
                    <table class="table table-striped">
                        @if (Model.Users.Any())
                        {
                            @foreach (var userName in Model.Users)
                            {
                                <tr>
                                    <td>@userName</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="no-users-message">No users with @Model.RoleName role</td>
                            </tr>
                        }
                    </table>
                    <div class="mt-3">
                        <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove users in role</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>

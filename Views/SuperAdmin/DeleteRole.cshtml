@using Microsoft.AspNetCore.Identity
@model IdentityRole

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Role</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            height: 100vh;
            margin: 0;
        }

        .delete-container {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .delete-container h3 {
                font-size: 1.75rem;
                color: #dc3545;
                margin-bottom: 20px;
            }

            .delete-container h6 {
                font-size: 1rem;
                color: #6c757d;
                margin-bottom: 30px;
            }

            .delete-container .btn {
                font-size: 1rem;
                border-radius: 8px;
                padding: 10px 20px;
                transition: background 0.3s ease, transform 0.3s ease;
            }

            .delete-container .btn-danger {
                background-color: #dc3545;
                border-color: #dc3545;
            }

                .delete-container .btn-danger:hover {
                    background-color: #c82333;
                    border-color: #bd2130;
                }

            .delete-container .btn-warning {
                background-color: #ffc107;
                border-color: #ffc107;
            }

                .delete-container .btn-warning:hover {
                    background-color: #e0a800;
                    border-color: #d39e00;
                }

            .delete-container .fa-trash-can {
                margin-right: 5px;
            }

            .delete-container .fa-ban {
                margin-right: 5px;
            }
    </style>
</head>
<body>

    <div class="delete-container">
        <h3>You are about to delete the role "@Model.Name"</h3>
        <h6>This action cannot be undone</h6>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash-can"></i> Delete
            </button>
            <a asp-action="ListAllRoles" class="btn btn-warning ms-2">
                <i class="fa-solid fa-ban"></i> Cancel
            </a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>

@model AgriConnectPlatformProject.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/delete.css" />
</head>
<body>
    <div class="delete-page-container">
        <div class="delete-box">
            <h1>Delete Product</h1>
            <h3>Are you sure you want to delete this?</h3>
            <div class="product-details">
                <h4>Product</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                    <dt class="col-sm-4">Production Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductionDate)</dd>
                    @if (User.IsInRole("Super Admin"))
                    {
                        <dt class="col-sm-4">Farmer ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FarmerId)</dd>
                    }
                </dl>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

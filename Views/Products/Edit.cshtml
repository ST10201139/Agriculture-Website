@model AgriConnectPlatformProject.Models.Products

@{
    ViewData["Title"] = "Edit Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/edit.css" />
</head>
<body>
    <div class="container edit-page-container">
        <div class="edit-box">
            <h1>Edit Product</h1>
            <h4>Product Details</h4>
            <hr />
            <form asp-action="Edit" class="edit-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductionDate" class="control-label"></label>
                    <input asp-for="ProductionDate" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
                
              <div class="form-actions">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>

                @if (User.IsInRole("Super Admin"))
                {
                    <div class="form-group">
                        <label asp-for="FarmerId" class="control-label"></label>
                        <input asp-for="FarmerId" class="form-control" />
                        <span asp-validation-for="FarmerId" class="text-danger"></span>
                    </div>
                }

            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
